<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <% include ./models/bs_css.ejs %>
    <title>Login</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Neucha&display=swap" rel="stylesheet">

</head>

<body style="font-family: 'Neucha', cursive;">
  <div class="container text-center p-5">
    <form action="/login" method="post">
      <h1>LOGIN</h1>
      <div class="row">
        <div class="col-5 m-auto p-1">
          <div class="row">
            <div class="input-group mb-2">
              <span class="input-group-text pull-right">Account</span>
              <input type="text" class="form-control" name="username">
            </div>
            <div class="input-group mb-2">
              <span class="input-group-text pull-right">Password</span>
              <input type="password" class="form-control" name="password">
            </div>
          </div>
          <div class="row m-2">
            <div class="col-4 m-auto ">
              <a href="/signUp" class="btn btn-outline-info w-100">Register</a>
            </div>
            <div class="col-4 m-auto">
              <button class="btn btn-primary w-100" type="submit">Enter</button>
            </div>
          </div>
          <div class="row m-2">
          </div>
        </div>
      </div>
    </form>
  </div>
  <% include ./models/bs_js.ejs %>
</body>

</html>